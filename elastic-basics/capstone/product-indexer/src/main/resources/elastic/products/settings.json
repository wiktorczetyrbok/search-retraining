{
  "number_of_shards": 1,
  "number_of_replicas": 0,
  "analysis": {
    "analyzer": {
      "text_analyzer": {
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "asciifolding"
        ]
      },
      "shingle_analyzer": {
        "tokenizer": "standard",
        "filter": [
          "lowercase",
          "asciifolding",
          "shingle_filter"
        ]
      }
    },
    "filter": {
      "shingle_filter": {
        "type": "shingle",
        "min_shingle_size": 2,
        "max_shingle_size": 4,
        "output_unigrams": true
      }
    }
  }
}
